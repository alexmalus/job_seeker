<% if display_loading %>
  <div class="justify-center" style="background: rgba(0, 0, 0, 0.3);">
    <div class="bg-white border py-2 px-5 rounded-lg flex items-center flex-col">
      <%= image_tag('spinner.gif') %>

      <div class="text-gray-500 text-xs font-light mt-2 text-center">
        Please wait...
      </div>
    </div>
  </div>
<% end %>

<div class="flex flex-col space-y-6">
  <% 10.times do |i| %>
    <%= render JobViewer::PlaceholderJob.new(id: i) %>
  <% end %>
</div>

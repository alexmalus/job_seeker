<div data-controller="form-handler">
  <div data-form-handler-target="flash">
  </div>

  <div class="bg-white shadow-md rounded px-8 pt-5 pb-5">
    <%#= data action ajax combined with remote option ensures AJAX request is handled by Rails and given Stimulus controller(s) %>
    <%#= current URL is preserved; no redirect needed. %>
    <%= form_tag(jobs_refresh_path, class: "md:flex md:justify-center",
                 data: { action: 'ajax:success->form-handler#displayFlash
                         ajax:error->form-handler#displayFlash' }, remote: true) do %>
      <div class="grid grid-cols-1 md:grid-cols-2">
        <div class="grid grid-cols-1 mr-8 w-40">
          <%= label_tag 'Region', nil, class: 'uppercase md:text-sm text-xs text-gray-500 text-light font-semibold' %>
          <%= select_tag "Region", options_for_select(["Munich"], "Munich"), class: "py-2 px-3 rounded-lg border-2 border-purple-300 mt-1 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent" %>
        </div>

        <div class="grid grid-cols-1 mt-auto mx-auto ml-auto">
          <%= submit_tag "Submit", class: "w-auto bg-purple-500 hover:bg-purple-700 rounded-lg shadow-xl font-medium text-white px-4 py-2" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
